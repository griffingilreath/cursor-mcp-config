{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "env": {
        "MCP_FILESYSTEM_ROOT": "."
      }
    },
    "terminal": {
      "command": "npx",
      "args": ["-y", "@wonderwhy-er/desktop-commander"]
    },
    "planner": {
      "command": "node",
      "args": ["~/.cursor/mcp-servers/planner/server.js"]
    },
    "qa-docs": {
      "command": "node",
      "args": ["~/.cursor/mcp-servers/qa-docs/server.js"]
    },
    "studio-orchestrator": {
      "command": "node",
      "args": ["~/.cursor/mcp-servers/studio-space-agents/orchestrator.js"]
    },
    "studio-designkit": {
      "command": "node",
      "args": ["~/.cursor/mcp-servers/studio-space-agents/designkit.js"]
    },
    "studio-datakit": {
      "command": "node",
      "args": ["~/.cursor/mcp-servers/studio-space-agents/datakit.js"]
    },
    "studio-plankit": {
      "command": "node",
      "args": ["~/.cursor/mcp-servers/studio-space-agents/plankit.js"]
    }
  }
}
